<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="svl_agenciaviajes_cliente_tree" model="ir.ui.view">
        <field name="name">svl_agenciaviajes.cliente.tree</field>
        <field name="model">svl_agenciaviajes.cliente</field>
        <field name="arch" type="xml">
            <tree string="Clientes">
                <field name="name"/>
                <field name="apellidos"/>
                <field name="email"/>
                <field name="telefono"/>
                <field name="viaje_count" string="NÂº Viajes"/>
            </tree>
        </field>
    </record>

    <record id="svl_agenciaviajes_cliente_search_view" model="ir.ui.view">
        <field name="name">svl_agenciaviajes_cliente.search</field>
        <field name="model">svl_agenciaviajes.cliente</field>
        <field name="arch" type="xml">
            <search string="Buscar Clientes">
                <field name="name"/>
                <field name="apellidos"/>
                <filter name="telefono" string="Telefonos espaÃ±oles:" domain="[('telefono','=like', '+34%')]"/>
            </search>
        </field>
    </record>

    <record id="svl_agenciaviajes_cliente_form" model="ir.ui.view">
        <field name="name">svl_agenciaviajes.cliente.form</field>
        <field name="model">svl_agenciaviajes.cliente</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" 
                        icon="fa-plane" 
                        style="pointer-events: none; cursor: default;">
                        <field name="viaje_count" widget="statinfo" string="Viajes"/>
                    </button>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="apellidos"/>
                            <field name="email"/>
                            <field name="telefono"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Viajes del Cliente" name="viajes">
                            <field name="viaje_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="destino_id"/>
                                    <field name="fecha_inicio"/>
                                    <field name="fecha_fin"/>
                                    <field name="temporada_id"/>
                                    <field name="precio_base" widget="monetary"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="Destinos que interesan" name="destinos">
                            <field name="destino_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="pais"/>
                                    <field name="continente"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    </data>
</odoo>