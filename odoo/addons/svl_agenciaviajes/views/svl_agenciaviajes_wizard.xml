<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_wizard_tree" model="ir.ui.view">
            <field name="name">svl.agenciaviajes.wizard.tree</field>
            <field name="model">svl_agenciaviajes.wizard</field> <field name="arch" type="xml">
                <tree>
                    <field name="create_date"/> 
                </tree>
            </field>
        </record>

        <record id="svl_agenciaviajes_wizard_form" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.wizard.form</field>
            <field name="model">svl_agenciaviajes.wizard</field>
            <field name="arch" type="xml">
                <form string="Modificar Número de Telefono de Clientes">
                    <group>
                        <group>
                            <p class="text-muted">Introduce el nuevo valor para los clientes seleccionados.</p>
                            <field name="new_num_telefono"/>
                        </group>
                    </group>

                    <group string="Clientes seleccionados">
                        <field name="cliente_ids" widget="many2many_tags"/>
                    </group>
                    
                    <footer>
                        <button name="apply_changes" 
                                string="Actualizar Número" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="action_svl_agenciaviajes_wizard" model="ir.actions.act_window">
            <field name="name">Modificar telefono (wizzard) </field>
            <field name="res_model">svl_agenciaviajes.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_svl_agenciaviajes_cliente"/>
        </record>
    </data>
</odoo>