<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_svl_agenciaviajes_destino_tree" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.destino</field>
            <field name="model">svl_agenciaviajes.destino</field>
            <field name="arch" type="xml">
                <tree string="Destinos" create="0" delete="0" edit="0">
                    <field name="name"/>
                    <field name="pais"/>
                    <field name="ciudad"/>
                    <field name="imagen" widget="image" options='{"size": [100, 100]}'/>
                </tree>
            </field>
        </record>

        <record id="view_svl_agenciaviajes_destino_form" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.destino.form</field>
            <field name="model">svl_agenciaviajes.destino</field>
            <field name="arch" type="xml">
                <form string="Destino">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="pais"/>
                                <field name="ciudad"/>
                                <field name="cliente_ids" widget="many2many_tags" string="Clientes Interesados"/>
                            </group>
                            <group>
                                <field name="imagen" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_svl_agenciaviajes_destino" model="ir.actions.act_window">
            <field name="name">Destinos posibles</field>
            <field name="res_model">svl_agenciaviajes.destino</field> 
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_svl_agenciaviajes_destino_tree"/>
        </record>
        
        <menuitem id="menu_svl_agenciaviajes_destino" 
                  name="Destinos" 
                  parent="menu_svl_agenciaviajes_root" 
                  action="action_svl_agenciaviajes_destino" 
                  sequence="20"/>
    
    </data>
</odoo>