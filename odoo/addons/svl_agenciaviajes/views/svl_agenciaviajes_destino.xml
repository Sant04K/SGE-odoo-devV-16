<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="svl_agenciaviajes_destino_tree" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.destino</field>
            <field name="model">svl_agenciaviajes.destino</field>
            <field name="arch" type="xml">
                <tree string="Destinos" create="0" delete="0" edit="0">
                    <field name="name"/>
                    <field name="pais"/>
                    <field name="continente"/>
                    <field name="imagen" widget="image" options='{"size": [100, 100]}'/>
                </tree>
            </field>
        </record>

        <record id="svl_agenciaviajes_destino_form" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.destino.form</field>
            <field name="model">svl_agenciaviajes.destino</field>
            <field name="arch" type="xml">
                <form string="Destino">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="pais"/>
                                <field name="continente" edit="1"/>
                                <field name="cliente_ids" widget="many2many_tags" string="Clientes Interesados"/>
                            </group>
                            <group>
                                <field name="imagen" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>  
    </data>
</odoo>