<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_svl_agenciaviajes_viaje_tree" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.viaje</field>
            <field name="model">svl_agenciaviajes.viaje</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="precio_total" />
                    <field name="destino_id"/>
                    <field name="temporada_id"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                    <field name="duracion"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_svl_agenciaviajes_viaje_form" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.viaje.form</field>
            <field name="model">svl_agenciaviajes.viaje</field>
            <field name="arch" type="xml">
                <form string="Viaje">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="destino_id"/>
                                <field name="temporada_id"/>
                            </group>
                            <group>
                                <group>
                                    <field name="precio_base"/>
                                    <field name="precio_total" string="Precio con Temporada"/>
                                </group>
                                <field name="fecha_inicio"/>
                                <field name="fecha_fin"/>
                                <field name="duracion" string="Duración (Días)"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_svl_agenciaviajes_viaje" model="ir.actions.act_window">
            <field name="name">Gestión de Viajes</field>
            <field name="res_model">svl_agenciaviajes.viaje</field> 
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_svl_agenciaviajes_viaje_tree"/>            
        </record>

        <menuitem id="menu_svl_agenciaviajes_root" 
                  name="Agencia Viajes" 
                  sequence="10"/>

        <menuitem id="menu_svl_agenciaviajes_viaje" 
                  name="Gestión de Viajes" 
                  parent="menu_svl_agenciaviajes_root" 
                  action="action_svl_agenciaviajes_viaje" 
                  sequence="10"/>

    </data>
</odoo>