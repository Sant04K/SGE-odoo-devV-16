<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="svl_agenciaviajes_temporada_tree" model="ir.ui.view">
            <field name="name">svl.agenciaviajes.temporada.tree</field>
            <field name="model">svl_agenciaviajes.temporada</field>
            <field name="arch" type="xml">
                <tree string="Temporada" 
                    create="false" 
                    delete="false" 
                    edit="false">
                    
                    <field name="state" 
                        widget="badge" 
                        decoration-success="state == 'alta'" 
                        decoration-warning="state == 'oportunidad'" 
                        decoration-info="state == 'baja'" />
                </tree>
            </field>
        </record>

        <record id="view_svl_agenciaviajes_temporada_form" model="ir.ui.view">
    <field name="name">svl.agenciaviajes.temporada.form</field>
    <field name="model">svl_agenciaviajes.temporada</field>
    <field name="arch" type="xml">
        <form string="Temporada" create="false" duplicate="false" edit="false">
            <sheet>
                <group>
                    <field name="state" readonly="1" widget="badge" 
                           decoration-success="state == 'alta'" 
                           decoration-warning="state == 'oportunidad'"
                           decoration-danger="state == 'baja'"/>
                </group>

                <notebook>
                    <page string="Viajes en esta Temporada">
                        <field name="viaje_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="cliente_id"/>
                                <field name="destino_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                
            </sheet>
        </form>
    </field>
</record>

<record id="svl_agenciaviajes_temporada_kanban" model="ir.ui.view">
    <field name="name">svl.agenciaviajes.temporada.kanban</field>
    <field name="model">svl_agenciaviajes.temporada</field>
    <field name="arch" type="xml">
        <kanban create="false" sample="1">
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        
                        <div class="text-center" style="width: 100%;">
                            <field name="state" 
                                   widget="badge" 
                                   decoration-success="state == 'alta'" 
                                   decoration-warning="state == 'oportunidad'" 
                                   decoration-info="state == 'baja'"/>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>
    </data>
</odoo>