<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_svl_agenciaviajes_temporada_tree" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.temporada</field>
            <field name="model">svl_agenciaviajes.temporada</field>
            <field name="arch" type="xml">
                <tree string="Temporada" create="0" edit="0" delete="0">
                    <field name="state" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="view_svl_agenciaviajes_temporada_form" model="ir.ui.view">
            <field name="name">svl_agenciaviajes.temporada.form</field>
            <field name="model">svl_agenciaviajes.temporada</field>
            <field name="arch" type="xml">
                <form string="Temporada">
                    <sheet>
                        <group>
                            <group>
                                <field name="state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_svl_agenciaviajes_temporada" model="ir.actions.act_window">
            <field name="name">Temporada</field>
            <field name="res_model">svl_agenciaviajes.temporada</field> 
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_svl_agenciaviajes_temporada_tree"/>
        </record>

        <menuitem id="menu_svl_agenciaviajes_temporada" 
                  name="Temporadas" 
                  parent="menu_svl_agenciaviajes_root" 
                  action="action_svl_agenciaviajes_temporada" 
                  sequence="20"/>
    
    </data>
