<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sge_agenciaviajes_viaje_tree" model="ir.ui.view">
            <field name="name">sge_agenciaviajes.viaje.tree</field>
            <field name="model">sge_agenciaviajes.viaje</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="pais"/>
                    <field name="ciudad"/>
                    <field name="imagen"/>
                </tree>
            </field>
        </record>

        <record id="view_sge_agenciaviajes_viaje_form" model="ir.ui.view">
            <field name="name">sge_agenciaviajes.viaje.form</field>
            <field name="model">sge_agenciaviajes.viaje</field>
            <field name="arch" type="xml">
                <form string=" ">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="pais"/>
                                <field name="ciudad"/>
                            </group>
                            <group>
                                <field name="imagen"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>