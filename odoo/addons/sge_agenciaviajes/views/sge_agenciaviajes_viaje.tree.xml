<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sge_agenciaviajes_viaje_tree" model="ir.ui.view">
            <field name="name">sge_agenciaviajes.viaje.tree</field>
            <field name="model">sge_agenciaviajes.viaje</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="destino"/>
                    <field name="precio"/>
                    <field name="fecha_inicio"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_sge_agenciaviajes_viaje_form" model="ir.ui.view">
            <field name="name">sge_agenciaviajes.viaje.form</field>
            <field name="model">sge_agenciaviajes.viaje</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="destino"/>
                            </group>
                            <group>
                                <field name="precio"/>
                                <field name="fecha_inicio"/>
                                <field name="fecha_fin"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_itinerario_tree" model="ir.ui.view">
            <field name="name">sge_agenciaviajes.itinerario.tree</field>
            <field name="model">sge_agenciaviajes.itinerario</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_sge_agenciaviajes_viaje" model="ir.actions.act_window">
            <field name="name">GestiÃ³n de Viajes</field>
            <field name="res_model">sge_agenciaviajes.viaje</field> 
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sge_agenciaviajes_viaje_tree"/>            
        </record>

        <record id="action_sge_agenciaviajes_itinerario" model="ir.actions.act_window">
            <field name="name">Itinerarios</field>
            <field name="res_model">sge_agenciaviajes.itinerario</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sge_agenciaviajes_root" 
                  name="Agencia Viajes" 
                  sequence="10"/>

        <menuitem id="menu_sge_agenciaviajes_viaje" 
                  name="GestiÃ³n de Viajes" 
                  parent="menu_sge_agenciaviajes_root" 
                  action="action_sge_agenciaviajes_viaje" 
                  sequence="10"/>

        <menuitem id="menu_sge_agenciaviajes_itinerario" 
                  name="Itinerarios Posibles" 
                  parent="menu_sge_agenciaviajes_root" 
                  action="action_sge_agenciaviajes_itinerario" 
                  sequence="20"/>
    </data>
</odoo>