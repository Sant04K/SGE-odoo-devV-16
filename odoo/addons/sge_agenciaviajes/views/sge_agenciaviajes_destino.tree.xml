<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sge_agenciaviajes_destino_tree" model="ir.ui.view">
            <field name="name">sge_agenciaviajes.destino.tree</field>
            <field name="model">sge_agenciaviajes.destino</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="destino"/>
                    <field name="precio"/>
                    <field name="fecha_inicio"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_sge_agenciaviajes_destino_form" model="ir.ui.view">
            <field name="name">sge_agenciaviajes.destino.form</field>
            <field name="model">sge_agenciaviajes.destino</field>
            <field name="arch" type="xml">
                <form string=" ">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="destino"/>
                            </group>
                            <group>
                                <field name="precio"/>
                                <field name="fecha_inicio"/>
                                <field name="fecha_fin"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_sge_agenciaviajes_destino" model="ir.actions.act_window">
            <field name="name">GestiÃ³n de Destinos</field>
            <field name="res_model">sge_agenciaviajes.destino</field> 
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sge_agenciaviajes_viaje_tree"/>            
        </record>

        <menuitem id="menu_sge_agenciaviajes_root" 
                  name="Agencia Viajes" 
                  sequence="10"/>

        <menuitem id="menu_sge_agenciaviajes_destino" 
                  name="Destinos disponibles" 
                  parent="menu_sge_agenciaviajes_root" 
                  action="action_sge_agenciaviajes_destino" 
                  sequence="10"/>

    </data>
</odoo>